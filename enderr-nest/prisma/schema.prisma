generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id            String     @id @default(uuid())
  email         String     @unique
  name          String
  profileImage  String?
  schedules     Schedule[]
  tags          Tag[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("users")
}

// Schedule model
model Schedule {
  id          String    @id @default(uuid())
  title       String
  description String?
  startTime   DateTime?
  endTime     DateTime?
  location    String?
  meetingLink String?
  isInbox     Boolean   @default(false)
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  tags        Tag[]
  notes       Note[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("schedules")
}

// Tag model
model Tag {
  id        String     @id @default(uuid())
  name      String
  color     String     @db.Char(7) // Hex color code
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  schedules Schedule[]
  createdAt DateTime   @default(now())

  @@map("tags")
}

// Note model
model Note {
  id        String     @id @default(uuid())
  title     String
  content   Json       // JSONB for rich text content
  version   Int        @default(1)
  schedules Schedule[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("notes")
}